<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.henrique.tcc.UserListActivity"
    tools:showIn="@layout/activity_user_list">

    <SearchView
        android:id="@+id/userSearch"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/userTabs"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSearch">

        <android.support.design.widget.TabItem
            android:id="@+id/tabRelatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relatos" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabVotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votos" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabNotifs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificações" />
    </android.support.design.widget.TabLayout>

    <ListView
        android:id="@+id/User_Report_List"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userTabs" />

</android.support.constraint.ConstraintLayout>
